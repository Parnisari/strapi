{
  "kind": "collectionType",
  "collectionName": "colors",
  "info": {
    "singularName": "color",
    "pluralName": "colors",
    "displayName": "Color"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "hexCode": {
      "type": "string",
      "minLength": 1,
      "maxLength": 7,
      "regex": "^#(?:[0-9a-fA-F]{3}|[0-9a-fA-F]{6})$"
    }
  }
}
